<div class="container mt-5">

  <h1 class="text-center mb-4">My Movie Categories</h1>

  <div class="text-center mb-4">
    <%= link_to "Create New Category", new_list_path, class: "btn btn-primary" %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-md-4 mb-4">
        <div class="card shadow-sm h-100">

          <div class="image-container">
            <% if list.name == "Drama" %>
              <%= image_tag "https://media.istockphoto.com/id/2025350203/fr/vectoriel/theatre-mask-icon-silhouette-theatre-drama-comedy-vector-icon-actor-acting-logo.jpg?s=612x612&w=0&k=20&c=l4zGd_sfKAvkFQjNp4CVS6tXdTsVgI6QOQ5ykj06O0Y=", class: "img-fluid", alt: "Drama category" %>
            <% elsif list.name == "Comedy" %>
              <%= image_tag "https://www.films-pour-enfants.com/films-pour-enfants/meilleurs%20films%20pour%20enfants.jpg", class: "img-fluid", alt: "Comedy category" %>
            <% elsif list.name == "Classic" %>
              <%= image_tag "https://i.pinimg.com/736x/19/b9/88/19b988d707867b0de1fdd6258d7e02d3.jpg", class: "img-fluid", alt: "Classic category" %>
            <% else %>
              <%= image_tag "https://img.freepik.com/vecteurs-libre/bobine-film-rouleau-film-metal-ruban-adhesif-noir-isole-fond-blanc_134830-1396.jpg", class: "img-fluid", alt: "Default category image" %>
            <% end %>
          </div>

          <div class="card-body d-flex flex-column">

            <h5 class="card-title text-center"><%= list.name %></h5>

            <div class="mt-auto text-center"> 
              <%= link_to "View Category", list_path(list), class: "btn btn-outline-primary btn-sm me-2" %>
              <%= link_to "Delete", list_path(list), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
