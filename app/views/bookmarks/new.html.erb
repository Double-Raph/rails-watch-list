<h1>Add a Bookmark</h1>

<%= form_with model: [@list, @bookmark], local: true do |form| %>
  <div class="form-group">
    <%= form.label :movie_id, "Select a Movie" %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title, prompt: "Choose a movie", class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :comment, "Add a Comment" %>
    <%= form.text_area :comment, class: "form-control", placeholder: "Enter a comment..." %>
  </div>

  <div class="text-center mt-4">
    <%= form.submit "Add Bookmark", class: "btn btn-primary" %>
    <%= link_to "Cancel", list_path(@list), class: "btn btn-secondary" %>
  </div>
<% end %>
